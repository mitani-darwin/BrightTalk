<% if user_signed_in? %>
  <%= link_to post_likes_path(post),
              data: { turbo_method: :post },
              class: "btn btn-sm btn-link text-decoration-none me-2 #{ current_user.liked?(post) ? 'text-danger' : 'text-muted' }",
              style: "border: none; padding: 0.25rem 0.5rem;" do %>
    <i class="bi bi-heart<%= '-fill' if current_user.liked?(post) %>"></i> <%= post.likes.count %>
  <% end %>
<% else %>
  <!-- 未ログイン -->
  <span class="text-muted me-2" style="padding: 0.25rem 0.5rem;">
    <i class="bi bi-heart"></i> <%= post.likes.count %>
  </span>
<% end %>