
<div class="container my-4">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- 投稿カード -->
      <div class="card shadow-sm">
        <!-- 投稿者のヘッダー画像 -->
        <% if @post.user&.header_image_or_default %>
          <div class="card-header p-0" style="height: 150px; overflow: hidden;">
            <%= image_tag @post.user.header_image_or_default, 
                class: "w-100 h-100", 
                style: "object-fit: cover;" %>
          </div>
        <% end %>
        <div class="card-body">
          <!-- ヘッダー情報 -->
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center">
              <div class="avatar me-3">
                <% if @post.user.present? %>
                  <% if @post.user.avatar_or_default %>
                    <%= image_tag @post.user.avatar_or_default, 
                        class: "rounded-circle", 
                        style: "width: 50px; height: 50px; object-fit: cover;" %>
                  <% else %>
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 50px; height: 50px;">
                      <i class="fas fa-user"></i>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <div>
                <h6 class="mb-0">
                  <%= link_to @post.user.name, user_path(@post.user), 
                      class: "text-decoration-none" if @post.user %>
                </h6>
                <small class="text-muted">
                  <i class="fas fa-clock"></i> <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                </small>
              </div>
            </div>

            <!-- カテゴリーバッジ -->
            <%= link_to posts_path(category_id: @post.category.id),
                        class: "badge bg-primary text-decoration-none" do %>
              <i class="fas fa-tag"></i> <%= @post.category.full_name %>
            <% end %>
          </div>

          <!-- タイトル -->
          <h1 class="h3 mb-3"><%= @post.title %></h1>

          <!-- 投稿タイプ表示 -->
          <% if @post.post_type.present? %>
            <div class="mb-3">
              <span class="badge bg-info fs-6 px-3 py-2">
                <i class="fas fa-tag me-1"></i>
                <%= case @post.post_type.name
                    when 'knowledge_sharing' then '知識共有'
                    when 'question' then '質問・相談'
                    when 'discussion' then '議論・討論'
                    when 'tutorial' then 'チュートリアル・手順'
                    when 'experience_sharing' then '体験談・事例'
                    when 'news_update' then 'ニュース・更新情報'
                    when 'opinion' then '意見・考察'
                    else @post.post_type.name
                    end %>
              </span>
            </div>
          <% end %>

          <!-- 構造化情報 -->
          <% if @post.purpose.present? || @post.target_audience.present? || @post.key_points.present? || @post.expected_outcome.present? %>
            <div class="structured-info-section mb-4 p-4 bg-light rounded">
              <h5 class="text-primary mb-3">
                <i class="fas fa-info-circle me-2"></i>投稿情報
              </h5>
              
              <% if @post.purpose.present? %>
                <div class="mb-3">
                  <h6 class="text-primary mb-2">
                    <i class="fas fa-bullseye me-1"></i>目的
                  </h6>
                  <p class="text-muted mb-0"><%= @post.purpose %></p>
                </div>
              <% end %>

              <% if @post.target_audience.present? %>
                <div class="mb-3">
                  <h6 class="text-success mb-2">
                    <i class="fas fa-users me-1"></i>対象読者
                  </h6>
                  <p class="text-muted mb-0"><%= @post.target_audience %></p>
                </div>
              <% end %>

              <% if @post.key_points.present? %>
                <div class="mb-3">
                  <h6 class="text-warning mb-2">
                    <i class="fas fa-list-ul me-1"></i>要点・ポイント
                  </h6>
                  <div class="text-muted">
                    <%= simple_format(@post.key_points) %>
                  </div>
                </div>
              <% end %>

              <% if @post.expected_outcome.present? %>
                <div class="mb-0">
                  <h6 class="text-info mb-2">
                    <i class="fas fa-target me-1"></i>期待する成果
                  </h6>
                  <p class="text-muted mb-0"><%= @post.expected_outcome %></p>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- タグ表示 -->
          <% if @post.tags.any? %>
            <div class="mb-3">
              <% @post.tags.each do |tag| %>
                <%= link_to posts_path(tag: tag.name),
                            class: "badge bg-secondary text-decoration-none me-1" do %>
                  #<%= tag.name %>
                <% end %>
              <% end %>
            </div>
          <% end %>

          <!-- コンテンツ -->
          <div class="mb-4">
            <div class="content-text">
              <%= @post.content_as_html %>
            </div>
          </div>

          <!-- 動画表示（投稿内容の下） -->
          <% if @post.videos&.attached? %>
            <% first_video = @post.videos.first %>
            <% if first_video %>
              <div class="mb-4">
                <h5 class="mb-3"><i class="fas fa-video me-2"></i>動画</h5>
                <div class="row g-3">
                  <div class="col-12">
                    <div class="ratio ratio-16x9 border rounded p-2 bg-light">
                      <video controls preload="metadata" style="width:100%; height:100%;">
                        <source src="<%= url_for(first_video) %>" type="<%= first_video.content_type %>">
                        お使いのブラウザは動画再生に対応していません。
                      </video>
                    </div>
                    <small class="text-muted d-block mt-1"><i class="fas fa-file-video me-1"></i><%= first_video.filename %></small>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>

          <!-- いいねとコメント数 -->
          <div class="d-flex justify-content-between align-items-center border-top pt-3">
            <div class="d-flex align-items-center gap-3">
              <%= render 'likes/like_button', post: @post %>
              <div class="d-flex align-items-center text-muted">
                <i class="bi bi-chat-left me-1" style="font-size: 1.1rem;"></i>
                <span><%= @post.comments.count %> コメント</span>
              </div>
            </div>

            <!-- アクションボタン -->
            <% if current_user == @post.user %>
              <div class="btn-group" role="group">
                <%= link_to edit_post_path(@post), class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="fas fa-edit"></i> 編集
                <% end %>

                <%= link_to @post, method: :delete,
                            data: {
                              confirm: "本当に削除しますか？",
                              turbo_method: :delete
                            },
                            class: "btn btn-outline-danger btn-sm" do %>
                  <i class="fas fa-trash"></i> 削除
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- 同じ投稿者の前・次の投稿ナビゲーション -->
      <% if @previous_post || @next_post %>
        <div class="card mt-4 shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div class="flex-grow-1">
                <% if @previous_post %>
                  <%= link_to post_path(@previous_post), class: "btn btn-outline-primary btn-sm d-flex align-items-center" do %>
                    <i class="fas fa-chevron-left me-2"></i>
                    <div class="text-start">
                      <div class="fw-bold">前の投稿</div>
                      <div class="text-truncate small" style="max-width: 200px;"><%= @previous_post.title %></div>
                    </div>
                  <% end %>
                <% end %>
              </div>
              
              <div class="text-center mx-3">
                <small class="text-muted">
                  <i class="fas fa-user me-1"></i>
                  <%= @post.user.name %>さんの他の投稿
                </small>
              </div>
              
              <div class="flex-grow-1 text-end">
                <% if @next_post %>
                  <%= link_to post_path(@next_post), class: "btn btn-outline-primary btn-sm d-flex align-items-center justify-content-end" do %>
                    <div class="text-end">
                      <div class="fw-bold">次の投稿</div>
                      <div class="text-truncate small" style="max-width: 200px;"><%= @next_post.title %></div>
                    </div>
                    <i class="fas fa-chevron-right ms-2"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- コメントセクション -->
      <div class="card mt-4 shadow-sm">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-comments"></i> コメント (<%= @post.comments.count %>)
          </h5>
        </div>
        <div class="card-body">
          <!-- コメント投稿フォーム -->
          <% if user_signed_in? %>
            <%= form_with model: [@post, @comment], local: true, class: "mb-4" do |form| %>
              <div class="mb-3">
                <%= form.text_area :content,
                                   class: "form-control",
                                   rows: 3,
                                   placeholder: "コメントを入力してください..." %>
              </div>
              <div class="d-grid">
                <%= form.submit "コメントを投稿", class: "btn btn-primary" %>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-info">
              コメントを投稿するには<%= link_to "ログイン", new_user_session_path %>が必要です。
            </div>
          <% end %>

          <!-- コメント一覧 -->
          <% if @post.comments.any? %>
            <div class="border-top pt-3">
              <% @post.comments.includes(:user).order(created_at: :desc).each do |comment| %>
                <div class="d-flex mb-3">
                  <div class="avatar me-3">
                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 40px; height: 40px;">
                      <span><%= comment.user&.name&.first || "?" %></span>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <div class="bg-light rounded p-3">
                      <div class="d-flex justify-content-between align-items-start mb-2">
                        <strong><%= comment.user&.name || "匿名ユーザー" %></strong>
                        <small class="text-muted">
                          <%= time_ago_in_words(comment.created_at) %>前
                        </small>
                      </div>
                      <p class="mb-0"><%= simple_format(h(comment.content)) %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <i class="fas fa-comment-slash fa-2x mb-2"></i>
              <p>まだコメントがありません。最初のコメントを投稿しませんか？</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 同じ投稿者の前/次の投稿ナビゲーション -->
      <% prev_post = @post.previous_post_by_author %>
      <% next_post = @post.next_post_by_author %>
      <% if prev_post || next_post %>
        <div class="card mt-4 shadow-sm">
          <div class="card-header">
            <h6 class="mb-0">
              <i class="fas fa-user"></i> <%= @post.user.name %>さんの他の投稿
            </h6>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <% if prev_post %>
                  <%= link_to post_path(prev_post), class: "text-decoration-none" do %>
                    <div class="d-flex align-items-center p-2 rounded border hover-bg-light">
                      <div class="me-3">
                        <i class="fas fa-chevron-left text-primary"></i>
                      </div>
                      <div class="flex-grow-1">
                        <small class="text-muted">前の投稿</small>
                        <div class="fw-bold text-truncate" style="max-width: 200px;">
                          <%= prev_post.title %>
                        </div>
                        <small class="text-muted">
                          <%= prev_post.created_at.strftime("%Y年%m月%d日") %>
                        </small>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <div class="text-muted text-center p-3">
                    <i class="fas fa-chevron-left"></i>
                    前の投稿はありません
                  </div>
                <% end %>
              </div>
              <div class="col-md-6">
                <% if next_post %>
                  <%= link_to post_path(next_post), class: "text-decoration-none" do %>
                    <div class="d-flex align-items-center p-2 rounded border hover-bg-light">
                      <div class="flex-grow-1 text-end">
                        <small class="text-muted">次の投稿</small>
                        <div class="fw-bold text-truncate" style="max-width: 200px;">
                          <%= next_post.title %>
                        </div>
                        <small class="text-muted">
                          <%= next_post.created_at.strftime("%Y年%m月%d日") %>
                        </small>
                      </div>
                      <div class="ms-3">
                        <i class="fas fa-chevron-right text-primary"></i>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <div class="text-muted text-center p-3">
                    次の投稿はありません
                    <i class="fas fa-chevron-right"></i>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- 戻るボタン -->
      <div class="mt-4">
        <%= link_to posts_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left"></i> 投稿一覧に戻る
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- 画像拡大表示用モーダル -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">画像</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modalImage" src="" alt="" class="img-fluid" style="max-width: 100%; max-height: 80vh;">
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // 画像モーダルの初期化
  const imageModal = document.getElementById('imageModal');
  const modalImage = document.getElementById('modalImage');
  const modalTitle = document.getElementById('imageModalLabel');
  
  if (imageModal) {
    imageModal.addEventListener('show.bs.modal', function (event) {
      // クリックされた画像から情報を取得
      const clickedImage = event.relatedTarget;
      const imageSrc = clickedImage.getAttribute('data-image-src') || clickedImage.src;
      const imageAlt = clickedImage.getAttribute('data-image-alt') || clickedImage.alt || '画像';
      
      // モーダル内の画像を更新
      modalImage.src = imageSrc;
      modalImage.alt = imageAlt;
      modalTitle.textContent = imageAlt || '画像';
    });
  }
});
</script>