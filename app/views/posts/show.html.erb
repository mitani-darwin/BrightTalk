
<div class="container my-4">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- 投稿カード -->
      <div class="card shadow-sm">
        <div class="card-body">
          <!-- ヘッダー情報 -->
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center">
              <div class="avatar me-3">
                <% if @post.user.present? %>
                  <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                       style="width: 50px; height: 50px;">
                    <span class="fw-bold"><%= @post.user.name || @post.user.email %></span>
                  </div>
                <% end %>
              </div>
              <div>
                <h6 class="mb-0"><%= @post.user.name if @post.user %></h6>
                <small class="text-muted">
                  <i class="fas fa-clock"></i> <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                </small>
              </div>
            </div>

            <!-- カテゴリーバッジ -->
            <%= link_to posts_path(category_id: @post.category.id),
                        class: "badge bg-primary text-decoration-none" do %>
              <i class="fas fa-tag"></i> <%= @post.category.name %>
            <% end %>
          </div>

          <!-- タイトル -->
          <h1 class="h3 mb-3"><%= @post.title %></h1>

          <!-- タグ表示 -->
          <% if @post.tags.any? %>
            <div class="mb-3">
              <% @post.tags.each do |tag| %>
                <%= link_to posts_path(tag: tag.name),
                            class: "badge bg-secondary text-decoration-none me-1" do %>
                  #<%= tag.name %>
                <% end %>
              <% end %>
            </div>
          <% end %>

          <!-- 投稿の画像表示部分 -->
          <% if @post.images.attached? && @post.images.any? %>
            <% if @post.images.attached? %>
                <div class="mb-4">
                  <div class="row">
                    <% @post.images.each do |image| %>
                      <div class="col-md-6 mb-3">
                        <%= image_tag image, class: "img-fluid rounded",
                                      style: "width: 100%; height: 400px; object-fit: cover;" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
          <% end %>

          <!-- コンテンツ -->
          <div class="mb-4">
            <div class="content-text">
              <%= simple_format(@post.content) %>
            </div>
          </div>

          <!-- いいねとコメント数 -->
          <div class="d-flex justify-content-between align-items-center border-top pt-3">
            <div class="d-flex align-items-center gap-3">
              <%= render 'likes/like_button', post: @post %>
              <div class="d-flex align-items-center text-muted">
                <i class="bi bi-chat-left me-1" style="font-size: 1.1rem;"></i>
                <span><%= @post.comments.count %> コメント</span>
              </div>
            </div>

            <!-- アクションボタン -->
            <% if current_user == @post.user %>
              <div class="btn-group" role="group">
                <%= link_to edit_post_path(@post), class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="fas fa-edit"></i> 編集
                <% end %>

                <%= link_to @post, method: :delete,
                            data: {
                              confirm: "本当に削除しますか？",
                              turbo_method: :delete
                            },
                            class: "btn btn-outline-danger btn-sm" do %>
                  <i class="fas fa-trash"></i> 削除
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- コメントセクション -->
      <div class="card mt-4 shadow-sm">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-comments"></i> コメント (<%= @post.comments.count %>)
          </h5>
        </div>
        <div class="card-body">
          <!-- コメント投稿フォーム -->
          <% if user_signed_in? %>
            <%= form_with model: [@post, @comment], local: true, class: "mb-4" do |form| %>
              <div class="mb-3">
                <%= form.text_area :content,
                                   class: "form-control",
                                   rows: 3,
                                   placeholder: "コメントを入力してください..." %>
              </div>
              <div class="d-grid">
                <%= form.submit "コメントを投稿", class: "btn btn-primary" %>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-info">
              コメントを投稿するには<%= link_to "ログイン", new_user_session_path %>が必要です。
            </div>
          <% end %>

          <!-- コメント一覧 -->
          <% if @post.comments.any? %>
            <div class="border-top pt-3">
              <% @post.comments.includes(:user).order(created_at: :desc).each do |comment| %>
                <div class="d-flex mb-3">
                  <div class="avatar me-3">
                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 40px; height: 40px;">
                      <span><%= comment.user&.name&.first || "?" %></span>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <div class="bg-light rounded p-3">
                      <div class="d-flex justify-content-between align-items-start mb-2">
                        <strong><%= comment.user&.name || "匿名ユーザー" %></strong>
                        <small class="text-muted">
                          <%= time_ago_in_words(comment.created_at) %>前
                        </small>
                      </div>
                      <p class="mb-0"><%= simple_format(comment.content) %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <i class="fas fa-comment-slash fa-2x mb-2"></i>
              <p>まだコメントがありません。最初のコメントを投稿しませんか？</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 戻るボタン -->
      <div class="mt-4">
        <%= link_to posts_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left"></i> 投稿一覧に戻る
        <% end %>
      </div>
    </div>
  </div>
</div>