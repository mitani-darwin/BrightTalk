<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
          <i class="fas fa-file-alt me-2"></i>下書き一覧
        </h2>
        <%= link_to new_post_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus me-2"></i>新しい投稿
        <% end %>
      </div>

      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-md-8">
                  <h5 class="card-title">
                    <%= link_to post.title.presence || "（タイトル未設定）", edit_post_path(post),
                                class: "text-decoration-none" %>
                    <span class="badge bg-secondary ms-2">下書き</span>
                  </h5>

                  <% if post.content.present? %>
                    <p class="card-text text-muted">
                      <%= truncate(strip_tags(post.content), length: 150) %>
                    </p>
                  <% end %>

                  <div class="small text-muted">
                    <i class="fas fa-clock me-1"></i>
                    最終更新: <%= post.updated_at.strftime("%Y年%m月%d日 %H:%M") %>

                    <% if post.category %>
                      <span class="ms-3">
                        <i class="fas fa-folder me-1"></i>
                        <%= post.category.name %>
                      </span>
                    <% end %>

                    <% if post.tags.any? %>
                      <span class="ms-3">
                        <i class="fas fa-tags me-1"></i>
                        <% post.tags.each do |tag| %>
                          <span class="badge bg-light text-dark me-1">#<%= tag.name %></span>
                        <% end %>
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="col-md-4 text-end">
                  <div class="btn-group" role="group">
                    <%= link_to edit_post_path(post), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="fas fa-edit"></i> 編集
                    <% end %>

                    <%= link_to post_path(post), method: :patch,
                                class: "btn btn-success btn-sm",
                                confirm: "この投稿を公開しますか？",
                                data: { turbo_method: :patch },
                                params: { commit: "公開" } do %>
                      <i class="fas fa-globe"></i> 公開
                    <% end %>

                    <%= link_to post_path(post), method: :delete,
                                class: "btn btn-outline-danger btn-sm",
                                confirm: "この下書きを削除しますか？",
                                data: { turbo_method: :delete } do %>
                      <i class="fas fa-trash"></i> 削除
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- ページネーション -->
        <div class="d-flex justify-content-center">
          <%= paginate @posts %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
          <h4 class="text-muted">下書きがありません</h4>
          <p class="text-muted">新しい投稿を作成してみましょう。</p>
          <%= link_to new_post_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-2"></i>新しい投稿を作成
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>