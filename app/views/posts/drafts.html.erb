<section class="mx-auto w-full max-w-screen-xl px-4 py-8 sm:px-6 lg:px-10">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h1 class="text-lg font-semibold text-slate-900">下書き一覧</h1>
      <p class="mt-1 text-sm text-slate-500">編集途中の投稿をまとめて管理できます。</p>
    </div>
    <%= link_to new_post_path, class: "inline-flex items-center rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800" do %>
      <i class="fas fa-plus mr-2"></i>新しい投稿
    <% end %>
  </div>

  <% if @posts.any? %>
    <%= form_with url: bulk_destroy_posts_path, method: :delete, local: true,
                  data: { turbo_confirm: "選択した下書きを削除していいですか？" },
                  id: "bulk_delete_form",
                  class: "mt-6" do |form| %>
      <div class="flex flex-wrap items-center justify-between gap-3 rounded-2xl border border-slate-200 bg-white px-4 py-3 shadow-sm">
        <label class="flex items-center gap-2 text-sm text-slate-600">
          <input class="h-4 w-4 rounded border-slate-300 text-slate-900 focus:ring-slate-300" type="checkbox" id="select_all">
          すべて選択
        </label>
        <button type="submit"
                class="inline-flex items-center rounded-xl border border-rose-200 px-4 py-2 text-sm font-semibold text-rose-600 transition hover:bg-rose-50 disabled:cursor-not-allowed disabled:opacity-50"
                id="bulk_delete_btn"
                disabled>
          <i class="fas fa-trash mr-2"></i>選択した下書きを削除
        </button>
      </div>

      <div class="mt-4 space-y-4">
        <% @posts.each do |post| %>
          <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex flex-wrap gap-4">
              <div class="flex items-start">
                <input class="draft-checkbox mt-1 h-4 w-4 rounded border-slate-300 text-slate-900 focus:ring-slate-300"
                       type="checkbox"
                       name="post_ids[]"
                       value="<%= post.id %>"
                       id="post_<%= post.id %>">
              </div>

              <div class="flex-1 space-y-2">
                <div class="flex flex-wrap items-center gap-2">
                  <h3 class="text-base font-semibold text-slate-900">
                    <%= link_to post.title.presence || "（タイトル未設定）", edit_post_path(post), class: "hover:text-slate-700" %>
                  </h3>
                  <span class="rounded-full bg-slate-100 px-2 py-0.5 text-xs font-semibold text-slate-600">下書き</span>
                </div>

                <% if post.content.present? %>
                  <p class="text-sm text-slate-500"><%= truncate(strip_tags(post.content_as_html), length: 150) %></p>
                <% end %>

                <div class="flex flex-wrap items-center gap-3 text-xs text-slate-500">
                  <span><i class="fas fa-clock mr-1"></i>最終更新: <%= post.updated_at.strftime("%Y年%m月%d日 %H:%M") %></span>
                  <% if post.category %>
                    <span><i class="fas fa-folder mr-1"></i><%= post.category.name %></span>
                  <% end %>
                  <% if post.tags.any? %>
                    <span class="flex flex-wrap items-center gap-1">
                      <i class="fas fa-tags mr-1"></i>
                      <% post.tags.each do |tag| %>
                        <span class="rounded-full bg-slate-100 px-2 py-0.5 text-xs text-slate-600">#<%= tag.name %></span>
                      <% end %>
                    </span>
                  <% end %>
                </div>
              </div>

              <div class="ml-auto flex flex-wrap gap-2">
                <%= link_to edit_post_path(post), class: "inline-flex items-center rounded-xl border border-slate-200 px-3 py-1.5 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900" do %>
                  <i class="fas fa-edit mr-1"></i>編集
                <% end %>
                <%= link_to post_path(post),
                            method: :delete,
                            class: "inline-flex items-center rounded-xl border border-rose-200 px-3 py-1.5 text-sm font-semibold text-rose-600 transition hover:bg-rose-50",
                            data: { turbo_method: :delete, turbo_confirm: "この下書きを削除しますか？" } do %>
                  <i class="fas fa-trash mr-1"></i>削除
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="mt-6 flex justify-center">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="mt-10 rounded-2xl border border-slate-200 bg-white px-6 py-10 text-center">
      <i class="fas fa-file-alt text-3xl text-slate-300"></i>
      <h2 class="mt-3 text-base font-semibold text-slate-700">下書きがありません</h2>
      <p class="mt-2 text-sm text-slate-500">新しい投稿を作成してみましょう。</p>
      <%= link_to new_post_path, class: "mt-4 inline-flex items-center rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800" do %>
        <i class="fas fa-plus mr-2"></i>新しい投稿を作成
      <% end %>
    </div>
  <% end %>
</section>

<script nonce="<%= content_security_policy_nonce %>">
document.addEventListener('DOMContentLoaded', function() {
  const selectAllCheckbox = document.getElementById('select_all');
  const draftCheckboxes = document.querySelectorAll('.draft-checkbox');
  const bulkDeleteBtn = document.getElementById('bulk_delete_btn');

  if (!selectAllCheckbox || !bulkDeleteBtn) return;

  selectAllCheckbox.addEventListener('change', function() {
    draftCheckboxes.forEach(checkbox => {
      checkbox.checked = this.checked;
    });
    updateDeleteButton();
  });

  draftCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', function() {
      updateSelectAllState();
      updateDeleteButton();
    });
  });

  function updateSelectAllState() {
    const checkedCount = document.querySelectorAll('.draft-checkbox:checked').length;
    const totalCount = draftCheckboxes.length;

    selectAllCheckbox.checked = checkedCount === totalCount && totalCount > 0;
    selectAllCheckbox.indeterminate = checkedCount > 0 && checkedCount < totalCount;
  }

  function updateDeleteButton() {
    const checkedCount = document.querySelectorAll('.draft-checkbox:checked').length;
    bulkDeleteBtn.disabled = checkedCount === 0;
  }

  updateDeleteButton();
});
</script>
