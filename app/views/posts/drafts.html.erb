<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
          <i class="fas fa-file-alt me-2"></i>下書き一覧
        </h2>
        <%= link_to new_post_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus me-2"></i>新しい投稿
        <% end %>
      </div>

      <% if @posts.any? %>
        <%= form_with url: bulk_destroy_posts_path, method: :delete, local: true, 
                      data: { turbo_confirm: "選択した下書きを削除していいですか？" }, 
                      id: "bulk_delete_form" do |form| %>
          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="select_all">
                <label class="form-check-label" for="select_all">
                  すべて選択
                </label>
              </div>
              <button type="submit" class="btn btn-danger" id="bulk_delete_btn" disabled>
                <i class="fas fa-trash me-2"></i>選択した下書きを削除
              </button>
            </div>
          </div>

        <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-md-1 d-flex align-items-center justify-content-center">
                  <div class="form-check">
                    <input class="form-check-input draft-checkbox" type="checkbox" 
                           name="post_ids[]" value="<%= post.id %>" id="post_<%= post.id %>"
                           style="transform: scale(1.5); cursor: pointer;">
                    <label class="form-check-label" for="post_<%= post.id %>" style="cursor: pointer;"></label>
                  </div>
                </div>
                <div class="col-md-7">
                  <h5 class="card-title">
                    <%= link_to post.title.presence || "（タイトル未設定）", edit_post_path(post),
                                class: "text-decoration-none" %>
                    <span class="badge bg-secondary ms-2">下書き</span>
                  </h5>

                  <% if post.content.present? %>
                    <p class="card-text text-muted">
                      <%= truncate(strip_tags(post.content_as_html), length: 150) %>
                    </p>
                  <% end %>

                  <div class="small text-muted">
                    <i class="fas fa-clock me-1"></i>
                    最終更新: <%= post.updated_at.strftime("%Y年%m月%d日 %H:%M") %>

                    <% if post.category %>
                      <span class="ms-3">
                        <i class="fas fa-folder me-1"></i>
                        <%= post.category.name %>
                      </span>
                    <% end %>

                    <% if post.tags.any? %>
                      <span class="ms-3">
                        <i class="fas fa-tags me-1"></i>
                        <% post.tags.each do |tag| %>
                          <span class="badge bg-light text-dark me-1">#<%= tag.name %></span>
                        <% end %>
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="col-md-4 text-end">
                  <div class="btn-group" role="group">
                    <%= link_to edit_post_path(post), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="fas fa-edit"></i> 編集
                    <% end %>

                    <%= link_to post_path(post), method: :delete,
                                class: "btn btn-outline-danger btn-sm",
                                data: { turbo_method: :delete, turbo_confirm: "この下書きを削除しますか？" } do %>
                      <i class="fas fa-trash"></i> 削除
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>

        <!-- ページネーション -->
        <div class="d-flex justify-content-center">
          <%= paginate @posts %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
          <h4 class="text-muted">下書きがありません</h4>
          <p class="text-muted">新しい投稿を作成してみましょう。</p>
          <%= link_to new_post_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-2"></i>新しい投稿を作成
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const selectAllCheckbox = document.getElementById('select_all');
  const draftCheckboxes = document.querySelectorAll('.draft-checkbox');
  const bulkDeleteBtn = document.getElementById('bulk_delete_btn');
  
  // Select All functionality
  selectAllCheckbox.addEventListener('change', function() {
    draftCheckboxes.forEach(checkbox => {
      checkbox.checked = this.checked;
    });
    updateDeleteButton();
  });
  
  // Individual checkbox change
  draftCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', function() {
      updateSelectAllState();
      updateDeleteButton();
    });
  });
  
  function updateSelectAllState() {
    const checkedCount = document.querySelectorAll('.draft-checkbox:checked').length;
    const totalCount = draftCheckboxes.length;
    
    selectAllCheckbox.checked = checkedCount === totalCount;
    selectAllCheckbox.indeterminate = checkedCount > 0 && checkedCount < totalCount;
  }
  
  function updateDeleteButton() {
    const checkedCount = document.querySelectorAll('.draft-checkbox:checked').length;
    bulkDeleteBtn.disabled = checkedCount === 0;
  }
  
  // Initial state
  updateDeleteButton();
});
</script>