    // Content editor features
    function initializeContentEditor() {
        const textarea = document.getElementById('contentTextarea');
        if (!textarea) return;

        // StimulusコントローラーがCodeEditorを初期化するまで待機
        const checkCodeEditor = () => {
            const codeEditorElement = textarea.closest('[data-controller*="code-editor"]');
            if (codeEditorElement) {
                console.log('CodeEditorコントローラー要素を確認済み');
                return true;
            }
            return false;
        };

        // 初期チェック
        if (checkCodeEditor()) {
            console.log('CodeEditorは既に設定済みです');
            return;
        }

        // フォールバック：3秒後にCodeEditorが初期化されていない場合は手動で初期化
        setTimeout(() => {
            if (!checkCodeEditor() || !textarea.nextSibling?.className?.includes('CodeMirror')) {
                console.warn('StimulusコントローラーでCodeEditorが初期化されませんでした。手動初期化を試行...');
                forceInitializeCodeEditorFallback(textarea);
            }
        }, 3000);
    }

    async function forceInitializeCodeEditorFallback(textarea) {
        try {
            let CodeMirror = window.CodeMirror;
            if (!CodeMirror && window.loadCodeMirror) {
                CodeMirror = await window.loadCodeMirror();
            }

            if (CodeMirror && typeof CodeMirror.fromTextArea === 'function') {
                const editor = CodeMirror.fromTextArea(textarea, {
                    mode: 'markdown',
                    theme: 'default',
                    lineNumbers: true,
                    lineWrapping: true,
                    indentUnit: 2,
                    tabSize: 2
                });
                console.log('✓ フォールバックでCodeEditorを初期化しました');
            }
        } catch (error) {
            console.error('フォールバック初期化にも失敗:', error);
        }
    }

