<section class="mx-auto w-full max-w-screen-xl px-4 py-8 sm:px-6 lg:px-10">
  <% nav_base = "flex items-center gap-2 rounded-xl px-3 py-2 text-sm font-medium transition" %>
  <% nav_active = "bg-slate-900 text-white" %>
  <% nav_inactive = "text-slate-600 hover:bg-slate-50 hover:text-slate-900" %>

  <div class="grid gap-6 lg:grid-cols-12">
    <aside class="lg:col-span-3">
      <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-4 py-3">
          <h2 class="text-sm font-semibold text-slate-700">アカウント設定</h2>
        </div>
        <nav class="p-2 space-y-1">
          <%= link_to account_user_path, class: "#{nav_base} #{nav_inactive}" do %>
            <i class="fas fa-user"></i>プロフィール
          <% end %>
          <%= link_to edit_account_user_path, class: "#{nav_base} #{nav_active}" do %>
            <i class="fas fa-edit"></i>アカウント編集
          <% end %>
          <% unless current_user.has_passkeys? %>
            <%= link_to edit_account_password_path, class: "#{nav_base} #{nav_inactive}" do %>
              <i class="fas fa-key"></i>パスワード変更
            <% end %>
          <% end %>
          <%= link_to passkeys_path, class: "#{nav_base} #{nav_inactive}" do %>
            <i class="fas fa-fingerprint"></i>パスキー認証
          <% end %>
        </nav>
      </div>
    </aside>

    <div class="lg:col-span-9">
      <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-6 py-4">
          <h3 class="text-base font-semibold text-slate-900">アカウント情報の編集</h3>
        </div>
        <div class="px-6 py-6">
          <%= form_with model: @user, url: update_account_user_path, method: :patch, local: true, html: { multipart: true }, class: "space-y-8" do |f| %>
            <% if @user.errors.any? %>
              <div class="rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700" role="alert">
                <strong class="font-semibold"><%= I18n.t("errors.messages.not_saved", count: @user.errors.count, resource: @user.class.model_name.human.downcase) %></strong>
                <ul class="mt-2 list-disc pl-5">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="space-y-4">
              <div>
                <label class="text-sm font-medium text-slate-700">ヘッダー画像</label>
                <div class="mt-2">
                  <% if @user.header_image_or_default %>
                    <div class="h-32 w-full overflow-hidden rounded-2xl bg-slate-100" id="header-preview">
                      <%= image_tag @user.header_image_or_default, class: "h-full w-full object-cover", id: "header-preview-img" %>
                    </div>
                  <% else %>
                    <div class="flex h-32 w-full items-center justify-center rounded-2xl bg-slate-100" id="header-preview">
                      <i class="fas fa-image text-2xl text-slate-400"></i>
                    </div>
                  <% end %>
                </div>
                <%= f.file_field :header_image, class: "mt-3 block w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:border-slate-300 focus:ring-2 focus:ring-slate-200", accept: "image/*" %>
                <p class="mt-2 text-xs text-slate-500">JPEG、PNG、GIF形式のファイル 推奨サイズ：1500x500px</p>
              </div>

              <div class="grid gap-6 lg:grid-cols-[auto,1fr]">
                <div class="text-center">
                  <label class="text-sm font-medium text-slate-700">プロフィール画像</label>
                  <div class="mt-2 flex justify-center">
                    <% if @user.avatar_or_default %>
                      <%= image_tag @user.avatar_or_default, class: "h-28 w-28 rounded-full object-cover", id: "avatar-preview" %>
                    <% else %>
                      <div class="flex h-28 w-28 items-center justify-center rounded-full bg-slate-100" id="avatar-preview">
                        <i class="fas fa-user text-2xl text-slate-400"></i>
                      </div>
                    <% end %>
                  </div>
                  <%= f.file_field :avatar, class: "mt-3 block w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm focus:border-slate-300 focus:ring-2 focus:ring-slate-200", accept: "image/*" %>
                  <p class="mt-2 text-xs text-slate-500">JPEG、PNG、GIF形式のファイル</p>
                </div>

                <div class="space-y-5">
                  <div>
                    <%= f.label :name, "名前", class: "text-sm font-medium text-slate-700" %>
                    <%= f.text_field :name, class: "mt-2 h-11 w-full rounded-xl border border-slate-200 bg-white px-4 text-base text-slate-700 shadow-sm focus:border-slate-300 focus:ring-2 focus:ring-slate-200", required: true %>
                  </div>

                  <div>
                    <%= f.label :email, "メールアドレス", class: "text-sm font-medium text-slate-700" %>
                    <%= f.email_field :email, class: "mt-2 h-11 w-full rounded-xl border border-slate-200 bg-white px-4 text-base text-slate-700 shadow-sm focus:border-slate-300 focus:ring-2 focus:ring-slate-200", required: true %>
                    <p class="mt-2 text-xs text-slate-500">メールアドレスを変更した場合、再度確認が必要になります</p>
                  </div>

                  <div>
                    <%= f.label :bio, "自己紹介", class: "text-sm font-medium text-slate-700" %>
                    <%= f.text_area :bio, class: "mt-2 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-700 shadow-sm focus:border-slate-300 focus:ring-2 focus:ring-slate-200", rows: 4, placeholder: "自分について簡単に紹介してください..." %>
                    <p class="mt-2 text-xs text-slate-500">趣味や興味、経歴など自由に記入してください（500文字以内推奨）</p>
                  </div>

                  <div>
                    <h4 class="text-sm font-semibold text-slate-700">ソーシャルリンク</h4>
                    <div class="mt-3 grid gap-4 sm:grid-cols-2">
                      <div>
                        <%= f.label :twitter_url, "Twitter", class: "text-xs font-semibold text-slate-500" %>
                        <div class="relative mt-2">
                          <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                            <i class="fab fa-twitter"></i>
                          </span>
                          <%= f.url_field :twitter_url, class: "h-11 w-full rounded-xl border border-slate-200 bg-white pl-10 pr-4 text-base text-slate-700 shadow-sm focus:border-slate-300 focus:ring-2 focus:ring-slate-200", placeholder: "https://twitter.com/username" %>
                        </div>
                      </div>
                      <div>
                        <%= f.label :github_url, "GitHub", class: "text-xs font-semibold text-slate-500" %>
                        <div class="relative mt-2">
                          <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                            <i class="fab fa-github"></i>
                          </span>
                          <%= f.url_field :github_url, class: "h-11 w-full rounded-xl border border-slate-200 bg-white pl-10 pr-4 text-base text-slate-700 shadow-sm focus:border-slate-300 focus:ring-2 focus:ring-slate-200", placeholder: "https://github.com/username" %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="flex flex-wrap gap-2">
                    <%= f.submit "変更を保存", class: "inline-flex h-11 items-center justify-center rounded-xl bg-slate-900 px-5 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-slate-400" %>
                    <%= link_to "キャンセル", account_user_path, class: "inline-flex h-11 items-center justify-center rounded-xl border border-slate-200 px-5 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<script nonce="<%= content_security_policy_nonce %>">
    function previewAvatar(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('avatar-preview');
                preview.innerHTML = '<img src="' + e.target.result + '" class="h-28 w-28 rounded-full object-cover">';
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    function previewHeader(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('header-preview');
                let img = document.getElementById('header-preview-img');
                if (!img) {
                  img = document.createElement('img');
                  img.id = 'header-preview-img';
                  img.className = 'h-full w-full object-cover';
                  preview.innerHTML = '';
                  preview.appendChild(img);
                }
                img.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
      var avatarInput = document.querySelector('input[name="user[avatar]"]');
      var headerInput = document.querySelector('input[name="user[header_image]"]');
      if (avatarInput) {
        avatarInput.addEventListener('change', function(){ previewAvatar(avatarInput); });
      }
      if (headerInput) {
        headerInput.addEventListener('change', function(){ previewHeader(headerInput); });
      }
    });
</script>
