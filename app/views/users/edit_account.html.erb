<div class="container mt-4">
  <div class="row">
    <!-- サイドバー -->
    <div class="col-md-3">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">アカウント設定</h5>
        </div>
        <div class="list-group list-group-flush">
          <%= link_to account_user_path, class: "list-group-item list-group-item-action" do %>
            <i class="fas fa-user me-2"></i>プロフィール
          <% end %>
          <%= link_to edit_account_user_path, class: "list-group-item list-group-item-action active" do %>
            <i class="fas fa-edit me-2"></i>アカウント編集
          <% end %>
          <% unless current_user.has_passkeys? %>
            <%= link_to edit_account_password_path, class: "list-group-item list-group-item-action" do %>
              <i class="fas fa-key me-2"></i>パスワード変更
            <% end %>
          <% end %>
          <%= link_to passkeys_path, class: "list-group-item list-group-item-action" do %>
            <i class="fas fa-fingerprint me-2"></i>パスキー認証
          <% end %>
        </div>
      </div>
    </div>

    <!-- メインコンテンツ -->
    <div class="col-md-9">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">アカウント情報の編集</h5>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: update_account_user_path, method: :patch, local: true, html: { multipart: true } do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <h6><%= I18n.t("errors.messages.not_saved",
                               count: @user.errors.count,
                               resource: @user.class.model_name.human.downcase)
                %></h6>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-12">
                <div class="mb-4">
                  <label class="form-label">ヘッダー画像</label>
                  <div class="mb-3">
                    <% if @user.header_image_or_default %>
                      <div class="header-preview-box rounded-8 overflow-hidden" id="header-preview">
                        <%= image_tag @user.header_image_or_default, class: "w-100 h-100 object-cover", id: "header-preview-img" %>
                      </div>
                    <% else %>
                      <div class="bg-secondary d-flex align-items-center justify-content-center rounded-8 header-preview-box overflow-hidden" id="header-preview">
                        <i class="fas fa-image fa-3x text-white"></i>
                      </div>
                    <% end %>
                  </div>
                  <%= f.file_field :header_image, class: "form-control", accept: "image/*" %>
                  <div class="form-text">
                    JPEG、PNG、GIF形式のファイル 推奨サイズ：1500x500px
                  </div>
                </div>
              </div>

              <div class="col-md-4 text-center">
                <div class="mb-3">
                  <label class="form-label">プロフィール画像</label>
                  <div class="mb-3">
                    <% if @user.avatar_or_default %>
                      <%= image_tag @user.avatar_or_default, class: "rounded-circle avatar-150 object-cover", id: "avatar-preview" %>
                    <% else %>
                      <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto avatar-150" id="avatar-preview">
                        <i class="fas fa-user fa-4x text-white"></i>
                      </div>
                    <% end %>
                  </div>
                  <%= f.file_field :avatar, class: "form-control", accept: "image/*" %>
                  <div class="form-text">
                    JPEG、PNG、GIF形式のファイル（5MB以下）
                  </div>
                </div>
              </div>

              <div class="col-md-8">
                <div class="mb-3">
                  <%= f.label :name, "名前", class: "form-label" %>
                  <%= f.text_field :name,
                                   class: "form-control",
                                   required: true %>
                </div>

                <div class="mb-3">
                  <%= f.label :email, "メールアドレス", class: "form-label" %>
                  <%= f.email_field :email,
                                    class: "form-control",
                                    required: true %>
                  <div class="form-text">
                    メールアドレスを変更した場合、再度確認が必要になります
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :bio, "自己紹介", class: "form-label" %>
                  <%= f.text_area :bio,
                                  class: "form-control",
                                  rows: 4,
                                  placeholder: "自分について簡単に紹介してください..." %>
                  <div class="form-text">
                    趣味や興味、経歴など自由に記入してください（500文字以内推奨）
                  </div>
                </div>

                <!-- ソーシャルリンクセクション -->
                <div class="mb-4">
                  <h6 class="form-label mb-3">ソーシャルリンク</h6>
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <%= f.label :twitter_url, "Twitter", class: "form-label" %>
                      <div class="input-group">
                        <span class="input-group-text"><i class="fab fa-twitter"></i></span>
                        <%= f.url_field :twitter_url, class: "form-control", 
                                       placeholder: "https://twitter.com/username" %>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <%= f.label :github_url, "GitHub", class: "form-label" %>
                      <div class="input-group">
                        <span class="input-group-text"><i class="fab fa-github"></i></span>
                        <%= f.url_field :github_url, class: "form-control", 
                                       placeholder: "https://github.com/username" %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="d-flex gap-2">
                  <%= f.submit "変更を保存", class: "btn btn-primary" %>
                  <%= link_to "キャンセル", account_user_path, class: "btn btn-secondary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script nonce="<%= content_security_policy_nonce %>">
    function previewAvatar(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('avatar-preview');
                preview.innerHTML = '<img src="' + e.target.result + '" class="rounded-circle avatar-150 object-cover">';
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    function previewHeader(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('header-preview');
                let img = document.getElementById('header-preview-img');
                if (!img) {
                  img = document.createElement('img');
                  img.id = 'header-preview-img';
                  img.className = 'w-100 h-100 object-cover';
                  // 既存のプレースホルダをクリア
                  preview.innerHTML = '';
                  preview.appendChild(img);
                }
                img.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    // イベントバインド（インライン属性を使用しない）
    document.addEventListener('DOMContentLoaded', function() {
      var avatarInput = document.querySelector('input[name="user[avatar]"]');
      var headerInput = document.querySelector('input[name="user[header_image]"]');
      if (avatarInput) {
        avatarInput.addEventListener('change', function(){ previewAvatar(avatarInput); });
      }
      if (headerInput) {
        headerInput.addEventListener('change', function(){ previewHeader(headerInput); });
      }
    });
</script>