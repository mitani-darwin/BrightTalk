<section class="mx-auto w-full max-w-screen-xl px-4 py-8 sm:px-6 lg:px-10">
  <% nav_base = "flex items-center gap-2 rounded-xl px-3 py-2 text-sm font-medium transition" %>
  <% nav_active = "bg-slate-900 text-white" %>
  <% nav_inactive = "text-slate-600 hover:bg-slate-50 hover:text-slate-900" %>

  <div class="grid gap-6 lg:grid-cols-12">
    <aside class="lg:col-span-3 space-y-6">
      <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-4 py-3">
          <h2 class="text-sm font-semibold text-slate-700">アカウント設定</h2>
        </div>
        <nav class="p-2 space-y-1">
          <%= link_to account_user_path(current_user), class: "#{nav_base} #{action_name == 'account' ? nav_active : nav_inactive}" do %>
            <i class="fas fa-user"></i>プロフィール
          <% end %>
          <%= link_to edit_account_user_path(current_user), class: "#{nav_base} #{action_name == 'edit_account' ? nav_active : nav_inactive}" do %>
            <i class="fas fa-edit"></i>アカウント編集
          <% end %>
          <% unless current_user.has_passkeys? %>
            <%= link_to edit_password_user_path(current_user), class: "#{nav_base} #{action_name == 'edit_password' ? nav_active : nav_inactive}" do %>
              <i class="fas fa-key"></i>パスワード変更
            <% end %>
          <% end %>
          <%= link_to new_passkey_registration_path, class: "#{nav_base} #{nav_inactive}" do %>
            <i class="fas fa-fingerprint"></i>パスキー認証
          <% end %>
        </nav>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <h3 class="text-sm font-semibold text-slate-700">アクティビティ統計</h3>
        <div class="mt-4 grid grid-cols-2 gap-4 text-center">
          <div class="rounded-xl bg-slate-50 px-3 py-3">
            <div class="text-lg font-semibold text-slate-900"><%= @stats[:posts_count] %></div>
            <div class="text-xs text-slate-500">投稿数</div>
          </div>
          <div class="rounded-xl bg-slate-50 px-3 py-3">
            <div class="text-lg font-semibold text-slate-900"><%= @stats[:comments_count] %></div>
            <div class="text-xs text-slate-500">コメント数</div>
          </div>
          <div class="rounded-xl bg-slate-50 px-3 py-3">
            <div class="text-lg font-semibold text-slate-900"><%= @stats[:likes_given] %></div>
            <div class="text-xs text-slate-500">いいね送信</div>
          </div>
          <div class="rounded-xl bg-slate-50 px-3 py-3">
            <div class="text-lg font-semibold text-slate-900"><%= @stats[:likes_received] %></div>
            <div class="text-xs text-slate-500">いいね受信</div>
          </div>
          <div class="rounded-xl bg-slate-50 px-3 py-3">
            <div class="text-lg font-semibold text-slate-900"><%= @stats[:bookmarks_count] %></div>
            <div class="text-xs text-slate-500">ブックマーク</div>
          </div>
        </div>
      </div>
    </aside>

    <div class="lg:col-span-9 space-y-6">
      <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="flex items-center justify-between border-b border-slate-200 px-6 py-4">
          <h3 class="text-base font-semibold text-slate-900">プロフィール情報</h3>
          <%= link_to "編集", edit_account_user_path(current_user), class: "inline-flex items-center rounded-xl border border-slate-200 px-3 py-1.5 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
        </div>
        <div class="px-6 py-6">
          <div class="grid gap-6 sm:grid-cols-[auto,1fr]">
            <div class="flex justify-center sm:justify-start">
              <% if @user.avatar_or_default %>
                <%= image_tag @user.avatar_or_default, class: "h-24 w-24 rounded-full object-cover" %>
              <% else %>
                <div class="flex h-24 w-24 items-center justify-center rounded-full bg-slate-100 text-slate-400">
                  <i class="fas fa-user text-2xl"></i>
                </div>
              <% end %>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-slate-900"><%= @user.name %></h4>
              <p class="text-sm text-slate-500"><%= @user.email %></p>

              <div class="mt-4 space-y-1 text-sm text-slate-600">
                <div><span class="font-semibold text-slate-700">アカウント作成日:</span> <%= @user.created_at.strftime("%Y年%m月%d日") %></div>
                <div><span class="font-semibold text-slate-700">最終更新:</span> <%= @user.updated_at.strftime("%Y年%m月%d日") %></div>
                <div>
                  <span class="font-semibold text-slate-700">メール確認:</span>
                  <% if @user.confirmed? %>
                    <span class="ml-2 inline-flex rounded-full bg-emerald-50 px-2 py-0.5 text-xs font-semibold text-emerald-700">確認済み</span>
                  <% else %>
                    <span class="ml-2 inline-flex rounded-full bg-amber-50 px-2 py-0.5 text-xs font-semibold text-amber-700">未確認</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-6 py-4">
          <h3 class="text-base font-semibold text-slate-900">セキュリティ設定</h3>
        </div>
        <div class="grid gap-6 px-6 py-6 lg:grid-cols-2">
          <div>
            <h4 class="text-sm font-semibold text-slate-700">認証方法</h4>
            <% if @user.has_passkeys? %>
              <div class="mt-3 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
                <i class="fas fa-fingerprint mr-2"></i>パスキー認証が設定されています
              </div>
              <p class="mt-2 text-sm text-slate-500">
                パスキー認証が設定されているため、パスワードログインは無効化されています。
              </p>
            <% else %>
              <div class="mt-3 rounded-xl border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-700">
                <i class="fas fa-key mr-2"></i>パスワード認証のみ
              </div>
              <p class="mt-2 text-sm text-slate-500">
                セキュリティ向上のため、パスキー認証の設定をお勧めします。
              </p>
              <%= link_to "パスキー認証を設定", new_passkey_registration_path, class: "mt-3 inline-flex items-center rounded-xl bg-slate-900 px-3 py-1.5 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800" %>
            <% end %>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-slate-700">登録デバイス数</h4>
            <div class="mt-3 text-2xl font-semibold text-slate-900"><%= @passkeys.count %></div>
            <% if @passkeys.any? %>
              <%= link_to "デバイス管理", passkeys_path, class: "mt-3 inline-flex items-center rounded-xl border border-slate-200 px-3 py-1.5 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="flex items-center justify-between border-b border-slate-200 px-6 py-4">
          <h3 class="text-base font-semibold text-slate-900">最近の投稿</h3>
          <%= link_to "すべて見る", user_path(@user), class: "inline-flex items-center rounded-xl border border-slate-200 px-3 py-1.5 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
        </div>
        <div class="px-6 py-6">
          <% if @recent_posts.any? %>
            <div class="space-y-4">
              <% @recent_posts.each do |post| %>
                <div class="border-b border-slate-100 pb-4 last:border-none last:pb-0">
                  <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                      <%= link_to post.title.presence || "無題", post_path(post), class: "text-sm font-semibold text-slate-900 hover:text-slate-700" %>
                      <div class="mt-1 text-xs text-slate-500"><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></div>
                    </div>
                    <div class="flex items-center gap-2 text-xs text-slate-500">
                      <span class="rounded-full bg-slate-100 px-2 py-1">いいね <%= post.likes.count %></span>
                      <span class="rounded-full bg-slate-100 px-2 py-1">コメント <%= post.comments.count %></span>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-slate-500">まだ投稿がありません</p>
            <%= link_to "投稿を作成", new_post_path, class: "mt-4 inline-flex items-center rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
