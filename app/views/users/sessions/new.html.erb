<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary text-white text-center">
          <h4 class="mb-0">
            <i class="bi bi-box-arrow-in-right me-2"></i>ログイン
          </h4>
        </div>
        <div class="card-body">
          <!-- WebAuthn認証オプション -->
          <div class="mb-4">
            <div class="text-center">
              <%= link_to new_webauthn_authentication_path, class: "btn btn-outline-primary btn-lg w-100 mb-3" do %>
                <i class="bi bi-fingerprint me-2"></i>WebAuthn認証でログイン
              <% end %>
              <small class="text-muted d-block">指紋認証、顔認証、セキュリティキー</small>
            </div>
          </div>

          <hr class="my-4">

          <div class="text-center mb-3">
            <small class="text-muted">または、メールアドレスとパスワードでログイン</small>
          </div>

          <!-- 通常のログインフォーム -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          <% end %>

          <!-- リンク -->
          <div class="text-center mt-4">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>

      <!-- WebAuthn認証についての説明 -->
      <div class="card mt-4">
        <div class="card-body">
          <h6><i class="bi bi-info-circle me-2"></i>WebAuthn認証について</h6>
          <ul class="small mb-0">
            <li>パスワードなしでより安全にログインできます</li>
            <li>指紋認証、顔認証、セキュリティキーが利用可能</li>
            <li>事前にWebAuthn認証の設定が必要です</li>
            <li>対応デバイス・ブラウザでのみ利用可能</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>