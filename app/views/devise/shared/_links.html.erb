<div class="d-flex flex-column gap-2">
  <%- if controller_name != 'sessions' && devise_mapping.modules.include?(:database_authenticatable) && !signed_in?(resource_name) %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-outline-primary btn-sm" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-outline-success btn-sm" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name), class: "btn btn-link btn-sm text-decoration-none" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "アカウント確認メールを再送信", new_confirmation_path(resource_name), class: "btn btn-link btn-sm text-decoration-none" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウントロック解除手順を再送信", new_unlock_path(resource_name), class: "btn btn-link btn-sm text-decoration-none" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でサインイン", omniauth_authorize_path(resource_name, provider), data: {turbo: false}, class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  <% end %>
</div>