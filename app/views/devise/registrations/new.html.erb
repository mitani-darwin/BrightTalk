<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">新規登録</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: users_path, local: true do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <h6><%= I18n.t("errors.messages.not_saved",
                               count: @user.errors.count,
                               resource: @user.class.model_name.human.downcase)
                %></h6>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, "名前", class: "form-label" %>
              <%= f.text_field :name,
                               autofocus: true,
                               class: "form-control",
                               required: true,
                               placeholder: "あなたの名前" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email,
                                class: "form-control",
                                required: true,
                                placeholder: "your@email.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード（仮）", class: "form-label" %>
              <%= f.password_field :password,
                                   autocomplete: "new-password",
                                   class: "form-control",
                                   required: true,
                                   minlength: devise_minimum_password_length,
                                   placeholder: "安全なパスワードを入力" %>
              <div class="form-text">
                <strong>要件:</strong> <%= password_requirement_text %><br>
                WebAuthn認証設定後は、このパスワードは使用されません
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
              <%= f.password_field :password_confirmation,
                                   autocomplete: "new-password",
                                   class: "form-control",
                                   required: true %>
            </div>

            <!-- パスワード強度の詳細説明 -->
            <div class="mb-3">
              <div class="card bg-light">
                <div class="card-body">
                  <h6 class="card-title"><i class="fas fa-shield-alt me-2"></i>パスワード強度要件</h6>
                  <div class="row">
                    <div class="col-md-6">
                      <h6 class="text-success">必要な条件:</h6>
                      <ul class="small">
                        <% password_strength_requirements.each do |req| %>
                          <li><%= req %></li>
                        <% end %>
                      </ul>
                    </div>
                    <div class="col-md-6">
                      <h6 class="text-danger">避けるべきパターン:</h6>
                      <ul class="small">
                        <% weak_password_examples.each do |example| %>
                          <li><%= example %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                  <div class="mt-2">
                    <strong>良い例:</strong> <code>MySecure123!</code> <code>Blue@Sky2024</code><br>
                    <strong>悪い例:</strong> <code>password123</code> <code>12345678</code> <code>qwerty</code>
                  </div>
                </div>
              </div>
            </div>

            <div class="d-grid">
              <%= f.submit "アカウント作成", class: "btn btn-primary" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p>すでにアカウントをお持ちの場合：</p>
            <%= link_to "ログイン", login_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>