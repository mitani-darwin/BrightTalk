<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow">
      <div class="card-header bg-warning text-dark text-center">
        <h4 class="mb-0">
          <i class="bi bi-key-fill me-2"></i>新しいパスワード設定
        </h4>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "新しいパスワード", class: "form-label" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", required: true %>
            <div class="form-text">
              <% if @minimum_password_length %>
                <small>最低<%= @minimum_password_length %>文字以上で入力してください</small>
              <% end %>
            </div>
            <div class="invalid-feedback">
              パスワードを入力してください。
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
            <div class="invalid-feedback">
              パスワード確認を入力してください。
            </div>
          </div>

          <div class="d-grid">
            <%= f.submit "パスワードを変更", class: "btn btn-warning btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
    // Bootstrap form validation
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>